package Class

class Person{
  private var name = ""
  private var age = 0
  def Person(name: String, age: Int){
    this.age = age
    this.name = name
  }
  def show(){
    println("name : " + name +  "\n age : " + age)
  }
}

class Student(_name: String, _age: Int, _num: Int) extends Person(_name, _age){
  private var name = ""
  private var age = 0
  private var num = 0
  def Student(name: String, age: Int, num: Int){
    super.Person(name, age)
    this.num = num
  }
  override def show(){
    println("name : " + name +  "\n age : " + age + "\n num" + num)
  }
}

class Gradute(_name : String, _age: Int, _num: Int, _work: String){
  private var name = ""
  private var age = 0
  private var num = 0
  private var work = ""
}

