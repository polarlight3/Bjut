package Class

class Person(_name, _age){
  private var name = _name
  private var age = _age
//  def Person(){
//    this.age = 0
//    this.name = ""
//  }
  def show(){
    println("name : " + name +  "\n age : " + age)
  }
}

class Student(_name: String, _age: Int, _num: Int) extends Person(name,age){
  private var name = ""
  private var age = 0
  private var num = 0
  def Student(name: String, age: Int, num: Int){
    super.Person(name, age)
    this.num = num
  }
  override def show(){
    println("name : " + name +  "\n age : " + age + "\n num" + num)
  }
}

class Gradute(_name : String, _age: Int, _num: Int, _work: String){
  private var name = ""
  private var age = 0
  private var num = 0
  private var work = ""
}

