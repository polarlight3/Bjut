package Class

trait Logger{
  def log(message: String){
    println(message)
  } 
}

trait Logger1{
  def log1(message: String){
    println(message)
  } 
}

trait Short extends Logger{
  val len = 13
  override def log(message: String){
    super.log(
        if(message.length() < len) message
        else message.substring(0,len - 3) + "..."
    )
  } 
}

class Tes{
  private val tt = 13
}

object Trait extends Logger with Logger1{
  def show(me: String){
    println("the massage is:")
    log(me)
  }
  def main(args: Array[String]): Unit = {
    var lf = new Tes with Logger with Short
    lf.log("hello world!")
    lf.log("hello world! and you")
  }
}